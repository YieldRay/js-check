{
    "compilerOptions": {
        "target": "ES2017",
        "module": "es6",
        "strict": true,
        "declaration": false,
        "removeComments": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
